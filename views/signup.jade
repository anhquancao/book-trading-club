extends layout
block content
    .container
        .row
            .col-md-6.col-md-offset-3
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Sign up
                    .panel-body
                        if errors && errors.length > 0
                            .alert.alert-danger
                                - each error in errors
                                    p=error
                        form(method='post')
                            .form-group
                                label(for='name') Name:
                                input#name.form-control(type='text',name="name",value=signUpUser.name)
                            .form-group
                                label(for='username') Username:
                                input#username.form-control(type='text',name="username",value=signUpUser.username)
                            .form-group
                                label(for='password') Password:
                                input#password.form-control(type='password',name="password",value=signUpUser.password)
                            button.btn.btn-default(type='submit') Submit